<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay"
        android:fillViewport="true"
>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

<ImageView
    android:layout_marginTop="@dimen/etMargin"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/imageView2" />
        <CustomControl.myEditText3
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:inputType="textPersonName"
            android:hint="الاسم"
            android:gravity="right"
            android:layout_marginTop="@dimen/etMargin"
            android:textSize="@dimen/et_fontsize"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/etEmail" />

        <CustomControl.myEditText3
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/etMargin"
            android:hint="البريد الالكترونى"
            android:gravity="right"
            android:textSize="@dimen/et_fontsize"
            android:layout_below="@+id/etName"
            android:layout_centerHorizontal="true" />

        <CustomControl.myEditText3
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/etReEmail"
            android:gravity="right"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/etMargin"
            android:hint="اعادة البريد الالكترونى"
            android:textSize="@dimen/et_fontsize"
            android:layout_below="@+id/etEmail"
            android:layout_centerHorizontal="true" />



        <CustomControl.myEditText3
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPhone"
            android:inputType="phone"
            android:hint="رقم الهاتف"
            android:textSize="@dimen/et_fontsize"
            android:gravity="right"
            android:layout_below="@+id/etReEmail"
            android:layout_marginTop="@dimen/etMargin"
            android:layout_alignStart="@+id/etReEmail" />

        <CustomControl.myEditText3
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:hint="كلمة المرور"
            android:gravity="right"
            android:layout_marginTop="@dimen/etMargin"
            android:textSize="@dimen/et_fontsize"
            android:layout_below="@+id/etPhone"
            android:layout_alignStart="@+id/etPhone" />

        <CustomControl.myButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/bRegister"
            android:layout_marginTop="@dimen/buttonMargin"
            android:text="التسجيل"
            android:textSize="@dimen/buttons_size"
            android:textColor="#FFF"
            android:gravity="center"
            android:background="@color/app_orange_thene"
            android:layout_below="@+id/etPassword"
            android:layout_alignStart="@+id/etPassword"
            android:layout_marginBottom="@dimen/buttonMargin"/>


    </RelativeLayout>




    </ScrollView>

